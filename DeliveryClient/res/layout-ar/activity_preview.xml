<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/myred"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/customerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        android:orientation="vertical" 
        android:onClick="selectAdd">

        <TextView
            android:id="@+id/customerName"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="@string/name"
            android:textColor="#ed1c24" />

        <TextView
            android:id="@+id/customerAdd"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerName"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:layout_marginRight="8dp"
            android:text="@string/address" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/flechleft" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:textColor="#cdcccb" >
    </ListView>

    <RelativeLayout
        android:id="@+id/totalamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/myedittext" >

        <TextView
            android:id="@+id/allTotal"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/totallabel"
            android:layout_alignBottom="@+id/totallabel"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="25"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/lira"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:layout_toRightOf="@+id/allTotal"
            android:text="@string/lira"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/totallabel"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="7dp"
            android:text="@string/total"
            android:textSize="19sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/edittext"
        android:hint="Notes:"
        android:gravity="right"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="submit"
        android:background="@drawable/mybutton"
        android:text="@string/submit" />

</LinearLayout>