<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mylistview"
    android:orientation="vertical"
    android:minHeight="20dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:checked="true"
            android:paddingRight="5dp"
            android:text="shi \n shi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            style="@style/mytextview"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="999" />

        <TextView
            android:id="@+id/qtTxt"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/minus"
            android:layout_toRightOf="@+id/minus"
            android:background="@drawable/middlebox"
            android:ems="10"
            android:gravity="center"
            android:maxLength="1"
            android:text="0" />
        
        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/qtTxt"
            android:src="@drawable/plussign" />

        <ImageView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/price"
            android:src="@drawable/minussign" />
    </RelativeLayout>

</LinearLayout>