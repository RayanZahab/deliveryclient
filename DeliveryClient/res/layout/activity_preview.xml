<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gris"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true" >

    <ScrollView
        android:id="@+id/scroll" 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin" >
           
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:onClick="selectAdd"
            android:layout_weight="1">
            
			<ImageView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.4"
			    android:src="@drawable/femalepicto"/>
			
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical" >

	                <TextView
	                    android:id="@+id/customerName"
	                    style="@style/mytextview"
	                    android:layout_weight="0.75"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:gravity="center|center_vertical"
	                    android:layout_gravity="left"
	                    android:singleLine="true"
	                    android:layout_marginRight="30dp"
	                    android:textStyle="bold"
	                    android:background="@drawable/namebg"
	                    android:text="@string/name"
	                    android:textSize="18sp"
	                    android:textColor="#ffffff" />
                
                <LinearLayout 
                    android:layout_width="match_parent"
	        		android:layout_height="0dp"
	        		android:layout_weight="1"
	        		android:orientation="horizontal">
	        		
                    <ImageView 
                        android:id="@+id/addressimg"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_weight="0.25"
                        android:layout_gravity="right"
                        android:src="@drawable/address"/>

	                <TextView
	                    android:id="@+id/customerAdd"
	                    style="@style/mytextview"
	                    android:layout_weight="0.75"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left"
	                    android:paddingLeft="8dp"
	                    android:text="@string/address" />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
	        		android:layout_height="0dp"
	        		android:layout_weight="1"
	        		android:orientation="horizontal">
	        		
                    <ImageView 
                        android:id="@+id/phoneimg"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_weight="0.25"
                        android:layout_gravity="right"
                        android:src="@drawable/phoneimg"/>

	                <TextView
	                    android:id="@+id/customerphone"
	                    style="@style/mytextview"
	                    android:layout_weight="0.75"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left"
	                    android:paddingLeft="8dp"
	                    android:text="@string/phonenum" />
                </LinearLayout>
                
                
            </LinearLayout>
            </LinearLayout>
			<ImageView 
               android:id="@+id/dividerblue"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/reddivider"/>
            <ListView
                android:id="@+id/listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp" >
            </ListView>
            
            

            <RelativeLayout
                android:id="@+id/totalamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/allTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/totallabel"
                    android:layout_alignBottom="@+id/totallabel"
                    android:layout_toLeftOf="@+id/lira"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="25"
                    android:textColor="@color/redbg"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/lira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/total"
                    android:layout_alignBottom="@+id/total"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingRight="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/redbg"
                    android:text="@string/lira"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/totallabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/redbg"
                    android:text="@string/total"
                    android:textSize="19sp" />
            </RelativeLayout>
            
            <ImageView 
                    android:id="@+id/dividerblue1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/reddivider"/>

            <RelativeLayout
                android:id="@+id/orderbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp" >
            </RelativeLayout>
            <TextView
                android:id="@+id/notes"
                style="@style/mytextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/notes" />

            <EditText
                android:id="@+id/noteinput"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:gravity="top"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:singleLine="false" />
            <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/yellow"
            android:text="@string/submit"
            android:textColor="@color/redbg"
            android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>