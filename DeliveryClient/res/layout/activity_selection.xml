<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myred"  
    android:fillViewport="true"   
	android:paddingBottom="@dimen/activity_vertical_margin"    
	android:paddingLeft="@dimen/activity_horizontal_margin"    
	android:paddingRight="@dimen/activity_horizontal_margin"    
	android:paddingTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myborder"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="?android:attr/actionBarSize"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/businessLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dip"
            style="@style/mytextview"
            android:text="@string/select_business" />

        <!-- Spinner Dropdown -->
        <!-- Spinner Dropdown -->

        <TextView
            android:id="@+id/countryLabel"
            style="@style/mytextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/businessLabel"
            android:padding="8dip"
            android:text="@string/select_country" />

        <Spinner
            android:id="@+id/countriesSP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countryLabel"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/myspinner"
            android:entries="@array/acc_type" />

        <!-- Select Label -->

        <TextView
            android:id="@+id/citiesLabel"
            style="@style/mytextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countriesSP"
            android:padding="8dip"
            android:text="@string/select_city" />

        <!-- Spinner Dropdown -->

        <Spinner
            android:id="@+id/citiesSP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/citiesLabel"
            android:layout_marginLeft="8dip"
            android:background="@drawable/myspinner"
            android:layout_marginRight="8dip"
            android:layout_marginTop="5dip" />
        <!-- Select Label -->

        <TextView
            android:id="@+id/areaLabel"
            style="@style/mytextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/citiesSP"
            android:padding="8dip"
            android:text="@string/select_area" />

        <!-- Spinner Dropdown -->

        <Spinner
            android:id="@+id/areasSP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/areaLabel"
            android:layout_marginLeft="8dip"
            android:background="@drawable/myspinner"
            android:layout_marginRight="8dip"
            android:layout_marginTop="5dip" />

        <Button
            android:id="@+id/select"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:background="@drawable/mybutton"
            android:onClick="select"
            android:text="@string/select"
            android:textColor="#ffffff"
            android:layout_marginTop="10dip"  />

        
        <TextView
            android:id="@+id/streetlabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/areasSP"
            android:layout_below="@+id/areasSP"
            android:layout_marginTop="5dip"
            android:text="Street" />
        
        <EditText
            android:id="@+id/street"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailsLabel"
            android:layout_below="@+id/streetlabel"
            android:layout_marginTop="5dip"
            android:text="TextView" />
        
        <TextView
            android:id="@+id/buildinglabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/areasSP"
            android:layout_below="@+id/street"
            android:layout_marginTop="5dip"
            android:text="Building" />
        
        <EditText
            android:id="@+id/building"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailsLabel"
            android:layout_below="@+id/buildinglabel"
            android:layout_marginTop="5dip"
            android:text="TextView" />
        
        <TextView
            android:id="@+id/floorlabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/areasSP"
            android:layout_below="@+id/building"
            android:layout_marginTop="5dip"
            android:text="floor" />
        
        <EditText
            android:id="@+id/floor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailsLabel"
            android:layout_below="@+id/floorlabel"
            android:layout_marginTop="5dip"
            android:text="TextView" />
        
        <TextView
            android:id="@+id/detailsLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/areasSP"
            android:layout_below="@+id/floor"
            android:layout_marginTop="5dip"
            android:text="Details" />
        
        <EditText
            android:id="@+id/details"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_alignLeft="@+id/detailsLabel"
            android:layout_below="@+id/detailsLabel"
            android:layout_marginTop="5dip"
            android:text="TextView" />
        
        

    </RelativeLayout>

</ScrollView>