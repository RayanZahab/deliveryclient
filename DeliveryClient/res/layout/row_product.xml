<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mylistview"
    android:orientation="vertical"
    android:paddingTop="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name"
            style="@style/mytextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/qtTxt"
            android:layout_toStartOf="@+id/qtTxt"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:singleLine="false"
            android:text="shiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii" />

        <TextView
            android:id="@+id/qtTxt"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/price"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/quantity"
            android:layout_toStartOf="@+id/quantity"
            android:background="@drawable/myedittext"
            android:maxLength="1"
            android:text="0"
            android:gravity="center" />

        <Button
            android:id="@+id/quantity"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/price"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/price"
            android:layout_toStartOf="@+id/price"
            android:background="@drawable/myedittext"
            android:gravity="center"
            android:maxLength="1"
            android:text="+" />

        <TextView
            android:id="@+id/price"
            style="@style/mytextview"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bar"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="999000L.L" />
    </RelativeLayout>

</LinearLayout>