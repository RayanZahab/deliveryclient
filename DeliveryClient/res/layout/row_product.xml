<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >
    
    <LinearLayout
      	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:orientation="horizontal" >
    	
    	<LinearLayout
	      	android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:gravity="center"
	    	android:layout_weight="0.2"
	    	android:orientation="vertical" >
    		
    	    <ImageView 
    	        android:id="@+id/plus"
    	        android:layout_weight="1"
    	        android:layout_height="30dp"
    	        android:layout_width="30dp"
    	        android:src="@drawable/plussign" />
    	    <ImageView 
    	        android:id="@+id/minus"
    	        android:layout_weight="1"
    	        android:layout_width="30dp"
    	        android:layout_height="30dp"
    	        android:src="@drawable/minussign"/>
    	</LinearLayout>
    	
    	<TextView
    	    android:id="@+id/name" 
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="0.5"
    	    android:singleLine="true"
    	    android:textColor="@color/redbg"
    	    android:text="shiiiiiiiiiiiii"
    	    android:layout_gravity="left|center_vertical"/>
    	
    	<LinearLayout 
    	    android:id="@+id/quantityandprice"
    	    android:layout_width="0dp"
    	    android:layout_height="26dp"
    	    android:layout_weight="0.4"
    	    android:layout_gravity="right|center_vertical"
    	    android:gravity="center"
    	    android:background="@drawable/bar">
    	    
    	    <TextView 
	    	    android:id="@+id/qtTxt"
	    	    android:layout_width="0dp"
	    	    android:layout_height="wrap_content"
	    	    android:layout_weight="0.3"
	    	    android:layout_gravity="center_vertical"
	    	    android:gravity="center"
	    	    android:layout_marginLeft="8dp"
	    	    android:text="0"
	    	    android:textColor="@color/redbg" />
    	    <TextView 
	    	    android:id="@+id/quantityX"
	    	    android:layout_width="0dp"
	    	    android:layout_height="wrap_content"
	    	    android:layout_weight="0.2"
	    	    android:layout_gravity="center_vertical"
	    	    android:gravity="center"
	    	    android:text="X"
	    	    android:textColor="@color/redbg" />
    	    <TextView 
	    	    android:id="@+id/price"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_weight="0.1"
	    	    android:layout_gravity="center_vertical"
	    	    android:gravity="center"
	    	    android:layout_marginLeft="8dp"
	    	    android:text="2000"
	    	    android:textColor="@color/redbg" />

    	    <TextView
    	        android:id="@+id/unit_lira"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_vertical"
    	        android:gravity="right"
    	        android:text="@string/lira"
    	        android:textColor="@color/redbg" />

    	</LinearLayout>

    </LinearLayout>
</LinearLayout>